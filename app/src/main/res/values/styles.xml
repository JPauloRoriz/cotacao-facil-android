<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryButtonMaterial">
        <item name="android:padding">10dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="SecundaryButtonMaterial" parent="Widget.MaterialComponents.Button.TextButton">

    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="CustomScrollViewStyle">
        <item name="android:scrollbarThumbVertical">@color/colorPrimary</item>

    </style>

    <style name="EditTextCursor" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">20dp</item>
    </style>

    <style name="RoundedCornersThemeDialog" parent="@style/MyDialogTheme">
        <item name="dialogCornerRadius">20dp</item>
    </style>

</resources>