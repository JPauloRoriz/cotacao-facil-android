<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cotacaofacil">


    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:name=".BaseApplication"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CotacaoFacil"
        tools:targetApi="31">
        <activity
            android:name=".presentation.ui.activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CotacaoFacil">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.ui.activity.HomeProviderActivity"
            android:exported="true"
            android:theme="@style/Theme.CotacaoFacil">
        </activity>

        <activity
            android:name=".presentation.ui.activity.HomeBuyerActivity"
            android:exported="true"
            android:theme="@style/Theme.CotacaoFacil">
        </activity>
        <activity
            android:name=".presentation.ui.activity.StockBuyerActivity"
            android:exported="true"
            android:theme="@style/Theme.CotacaoFacil">
        </activity>

        <activity
            android:name=".presentation.ui.activity.CreatePriceActivity"
            android:exported="true"
            android:theme="@style/Theme.CotacaoFacil">
        </activity>

        <activity
            android:name=".presentation.ui.activity.ParticipatePriceProviderActivity"
            android:exported="true"
            android:theme="@style/Theme.CotacaoFacil">
        </activity>
        <activity
            android:name=".presentation.ui.activity.PriceInfoActivity"
            android:exported="true"
            android:theme="@style/Theme.CotacaoFacil">
        </activity>
    </application>

</manifest>